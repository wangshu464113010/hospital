<keymap version="1" name="Default copy" parent="$default">
  <action id="$Copy">
    <keyboard-shortcut first-keystroke="ctrl c" />
  </action>
  <action id="$Paste">
    <keyboard-shortcut first-keystroke="ctrl v" />
  </action>
  <action id="EditorDeleteLine">
    <keyboard-shortcut first-keystroke="ctrl y" />
    <keyboard-shortcut first-keystroke="shift ctrl x" />
  </action>
  <action id="EditorToggleColumnMode">
    <keyboard-shortcut first-keystroke="shift alt insert" />
    <keyboard-shortcut first-keystroke="shift ctrl q" />
  </action>
  <action id="Generate">
    <keyboard-shortcut first-keystroke="alt insert" />
    <keyboard-shortcut first-keystroke="shift ctrl caps_lock" />
  </action>
  <action id="SurroundWith">
    <keyboard-shortcut first-keystroke="ctrl alt t" />
    <keyboard-shortcut first-keystroke="shift ctrl alt z" />
  </action>
</keymap>